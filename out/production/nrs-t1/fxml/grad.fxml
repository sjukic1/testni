<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="5.0" vgap="5.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
   <stylesheets>
      <URL value="@/css/forme.css" />
   </stylesheets>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="150.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <Label text="Naziv:" />
      <TextField fx:id="fieldNaziv" GridPane.columnIndex="1" />
      <Label text="Broj stanovnika:" GridPane.rowIndex="1" />
      <TextField fx:id="fieldBrojStanovnika" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <Label text="Država:" GridPane.rowIndex="2" />
      <ChoiceBox fx:id="choiceDrzava" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="5">
         <buttons>
            <Button fx:id="btnOk" mnemonicParsing="false" onAction="#clickOk" text="Ok" />
            <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#clickCancel" text="Cancel" />
         </buttons>
      </ButtonBar>
      <Label text="Poštanski broj:" GridPane.rowIndex="3" />
      <TextField fx:id="fldPostanskiBroj" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <ImageView fx:id="imgView" fitHeight="152.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.rowIndex="4" />
      <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <buttons>
          <Button minHeight="-Infinity" mnemonicParsing="false" onAction="#dodajSliku" text="Promijeni" textOverrun="CLIP" />
            <Button mnemonicParsing="false" onAction="#odaberiSliku" text="Odaberi sliku" textOverrun="CENTER_ELLIPSIS">
               <opaqueInsets>
                  <Insets left="15.0" />
               </opaqueInsets>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding></Button>
        </buttons>
      </ButtonBar>
   </children>
   <opaqueInsets>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </opaqueInsets>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
